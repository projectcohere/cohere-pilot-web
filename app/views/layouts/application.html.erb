<!DOCTYPE html>
<html>
  <head>
    <title>Cohere Pilot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <% if signed_in? %>
        <%= current_user.email %>
        <%= button_to "Sign out", session_path, method: :delete %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
