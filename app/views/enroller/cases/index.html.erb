<% s = ::Cases::Scope %>

<main class="Page">
  <header class="PageHeader">
    <h1 class="PageHeader-title">
      <%= @scope.name %> Cases
    </h1>

    <%= totals_for(@page, of: "cases") %>

    <div class="PageHeader-row">
      <%= render(partial: "cases/search") %>
    </div>
  </header>

  <ul id="case-list" class="CaseList">
    <% if @cases.blank? %>
      <h2 class="CaseList-fallback">
        No <%= @scope.name.downcase %> cases found.
      </h2>
    <% else %>
      <%= render(partial: "enroller/cases/cell", collection: @cases) %>
    <% end %>
  </ul>

  <%= pager_for(@page, of: "cases") %>
</main>
