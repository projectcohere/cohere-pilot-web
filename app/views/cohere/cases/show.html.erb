<main class="ShowCase Main">
  <header class="Main-header">
    <%= link_to("Back to Cases", :back, class: "Main-back") %>

    <h1 class="Main-title">
      <%= @case.recipient_name %>'s case
    </h1>

    <div class="Main-actions">
      <% if @case.can_make_referral? %>
        <%=
          link_to(@case.referral_label, @case.referral_path,
            class: "Button Button--action",
            params: {
              program: @case.referral_program.key
            },
          )
        %>
      <% end %>

      <%=
        link_to("Edit Case", edit_case_path(@case),
          class: "Button Button--secondary",
        )
      %>
    </div>

    <div class="Main-row Main-filters">
      <nav class="Filters">
        <%= filter_for(:application, is_selected: true) %>
        <%= filter_for(:documents) %>
      </nav>
    </div>
  </header>

  <div class="CaseDetail">
    <article class="CaseDetail-case Panel--read Panel">
      <section id="application" class="Panel-tab is-visible">
        <%= section_tag("Details", class: "ShowCase-details") do %>
          <%= field_tag("Status", class: "ShowCase-status") do %>
            <%= @case.status %>
          <%- end %>

          <%= field_tag("Program", class: "ShowCase-program") do %>
            <%= @case.program_name %>
          <%- end %>

          <%= field_tag("Enroller", class: "ShowCase-enroller") do %>
            <%= @case.enroller_name %>
          <%- end %>
        <%- end %>

        <%= section_tag("Contact", class: "ShowCase-contact") do %>
          <%= field_tag("Phone #", class: "ShowCase-phoneNumber") do %>
            +1 <%= number_to_phone(@case.phone_number) %>
          <%- end %>

          <%= field_tag("Primary Residential Address", class: "ShowCase-address") do %>
            <% @case.address.each do |line| %>
              <%= line %>
              <br>
            <% end %>
          <%- end %>
        <%- end %>

        <%= section_tag("Utility Account", class: "ShowCase-utilityAccount") do %>
          <%= field_tag("Supplier", class: "ShowCase-supplier") do %>
            <%= @case.supplier_name %>
          <%- end %>

          <% if policy.permit?(:view_supplier_account_active) %>
            <%= field_tag(nil, "&nbsp".html_safe, class: "ShowCase-hasActiveService") do %>
              <span class="<%= cx("Checkbox", "is-checked" => @case.supplier_account_active_service?) %>"></span> Active?
            <%- end %>
          <% end %>

          <%= field_tag("Account #", class: "ShowCase-accountNumber") do %>
            <%= @case.supplier_account_number %>
          <%- end %>

          <%= field_tag("Arrears", class: "ShowCase-arrears") do %>
            <%= @case.supplier_account_arrears %>
          <%- end %>
        <%- end %>

        <%= section_tag("MDHHS", class: "ShowCase-dhs") do %>
          <%= field_tag("Case #", class: "ShowCase-dhsNumber") do %>
            <%= @case.household_dhs_number %>
          <%- end %>
        <%- end %>

        <%= section_tag("Household", class: "ShowCase-household") do %>
          <%= field_tag("Size", class: "ShowCase-householdSize") do %>
            <%= @case.household_size %>
          <%- end %>

          <%= field_tag("Monthly Income", class: "ShowCase-monthlyIncome") do %>
            <%= @case.household_income %>
          <%- end %>

          <% if policy.permit?(:view_household_ownership) %>
            <%= field_tag("Rent or Own?", class: "ShowCase-ownership") do %>
              <%= @case.household_ownership %>
            <%- end %>
          <% end %>

          <% if policy.permit?(:view_household_primary_residence) %>
            <%= field_tag(nil, "&nbsp".html_safe, class: "ShowCase-isPrimaryResidence") do %>
              <span class="<%= cx("Checkbox", "is-checked" => @case.household_primary_residence?) %>"></span> Primary Residence?
            <%- end %>
          <% end %>

          <%= field_tag("FPL Percent", class: "ShowCase-fpl") do %>
            <%= @case.household_fpl_percent %>
          <%- end %>
        <%- end %>
      </section>

      <section id="documents" class="Panel-tab">
        <%=
          render(partial: "cases/documents", locals: {
            documents: @case.documents
          })
        %>
      </section>
    </article>

    <%=
      render(partial: "cohere/cases/chat", locals: {
        chat: @chat,
        recevier: @case.recipient_first_name
      })
    %>
  </div>
</main>
