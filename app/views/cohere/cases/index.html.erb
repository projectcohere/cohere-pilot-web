<% s = ::Cases::Scope %>

<main class="Main">
  <header class="Main-header">
    <h1 class="Main-title">
      <%= @scope.title %>
    </h1>

    <%= totals_for(@page, of: "cases") %>

    <div class="Main-row">
      <div class="CaseSearch">
        <p class="CaseSearch-title">Search for Cases</p>
        <%= form_for(:case_filter, html: { class: "CaseSearch-field" }) do |f| %>
          <%= f.text_field(:search, class: "CaseSearch-input") %>
          <%= f.submit("Find Cases", class: "CaseSearch-action Button Button--action") %>
        <%- end %>
      </div>
    </div>

    <div class="Main-row Main-filters">
      <nav class="Filters">
        <%= cases_scope_link_to(s::All) %>
        <%= cases_scope_link_to(s::Open) %>
        <%= cases_scope_link_to(s::Completed) %>
      </nav>
    </div>
  </header>

  <ul id="case-list" class="CaseList">
    <% if @cases&.blank? %>
      <h2 class="CaseList-fallback">
        No <%= @scope.adjective %> cases left.
      </h2>
    <% else %>
      <%- views = @cases.map { |c| Cases::View.new(c, @scope) } %>
      <%= render(partial: "cohere/cases/cell", collection: views) %>
    <% end %>
  </ul>

  <%= pager_for(@page, of: "cases") %>
</main>
