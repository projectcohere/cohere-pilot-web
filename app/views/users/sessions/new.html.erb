<main class="SignIn">
  <div class="SignIn-panel">
    <div class="SignIn-left">
      <%= image_tag("logo-large-full.svg", height: 67, class: "SignIn-logo", alt: "Cohere Logo") %>

      <%= form_for(:session, url: sessions_path, html: { class: "SignIn-form Panel" }) do |f| %>
        <%= section_tag(class: "SignIn-credentials") do %>
          <%= f.field(:email, t("users.email.label"), class: "SignIn-email") do %>
            <%=
              f.text_field(:email,
                value: params[:email],
                type: "email",
                placeholder: t("users.email.placeholder"),
                tid: "E-mail Field",
              )
            %>
          <% end %>

          <%= f.field(:password, t("users.password.label"), class: "SignIn-password") do %>
            <%=
              f.password_field(:password,
                value: params[:password],
                tid: "Password Field",
              )
            %>

            <%=
              check_box_tag(:show_password, 1, false,
                class: "SignIn-showPassword Icon Icon--eye"
              )
            %>
          <% end %>

          <div class="SignIn-helpers">
            <%= link_to(t(".forgot-password"), forgot_passwords_path, class: "SignIn-redirectLink") %>
          </div>
        <% end %>

        <%= section_tag(class: "SignIn-actions") do %>
          <%=
            f.submit(
              class: "SignIn-submit Form-submit Button Button--action",
              tid: "Sign In Button",
            )
          %>

          <% case @demo_id %>
          <% when "s01" %>
            <%= demo_coachmark_tag(anchor: :right) do %>
              To get started, let's sign in as a Call Center Representative.
            <%- end %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <div class="SignIn-right">
      <div class="SignIn-title">
        <%= tag.h1(t(".title")) %>
        <%= tag.h2(t(".prompt")) %>
      </div>
    </div>
  </div>
</main>
