<main class="Main SignIn">
  <div class="SignIn-title">
    <%= image_tag("logo-large-full.svg", class: "SignIn-logo", alt: "Cohere Logo") %>
    <h2><%= t(".prompt").html_safe %></h2>
  </div>
  <%= form_for(:session, url: sessions_path, html: { class: "SignIn-form Form" }) do |f| %>
    <%= f.section(class: "SignIn-credentials") do %>
      <%= f.field(:email, t("users.email.label"), class: "SignIn-email") do %>
        <% f.text_field(:email, type: "email", placeholder: t("users.email.placeholder")) %>
      <% end %>

      <%= f.field(:password, t("users.password.label"), class: "SignIn-password") do %>
        <% f.password_field(:password, placeholder: t("users.password.placeholder")) %>
      <% end %>
    <% end %>

    <%= f.section(class: "SignIn-actions") do %>
      <%= f.submit(class: "SignIn-submit Button--action") %>
      <%= link_to(t(".forgot_password"), forgot_passwords_path, class: "SignIn-resetPassword") %>
    <% end %>
  <% end %>
</main>
