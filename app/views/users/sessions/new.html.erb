<main class="Main SignIn">
  <div class="SignIn-panel">
    <div class="SignIn-left">
      <%= image_tag("logo-large-full.svg", height: 67, class: "SignIn-logo", alt: "Cohere Logo") %>

      <%= form_for(:session, url: sessions_path, html: { class: "SignIn-form Form" }) do |f| %>
        <%= f.section(class: "SignIn-credentials") do %>
          <%= f.field(:email, t("users.email.label"), class: "SignIn-email") do %>
            <% f.text_field(:email, type: "email", placeholder: t("users.email.placeholder")) %>
          <% end %>

          <%= f.field(:password, t("users.password.label"), class: "SignIn-password") do %>
            <% f.password_field(:password) %>
          <% end %>

          <div class="SignIn-helpers">
            <%= f.field(:show_password, for: :show_password, bare: true, class: "SignIn-showPassword") do %>
              <%= check_box_tag(:show_password) %>
              <span>Show Password?</span>
            <% end %>

            <%= link_to(t(".forgot-password"), forgot_passwords_path, class: "SignIn-redirectLink") %>
          </div>
        <% end %>

        <%= f.section(class: "SignIn-actions") do %>
          <%= f.submit(class: "SignIn-submit Button--action") %>
        <% end %>
      <% end %>
    </div>

    <div class="SignIn-right">
      <div class="SignIn-title">
        <h1><%= t(".title") %></h1>
        <h2><%= t(".prompt") %></h2>
      </div>
    </div>
  </div>
</main>
