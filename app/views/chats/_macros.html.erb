<%- groups = Chat::Macro::Repo.get.find_grouped %>

<%# -- json -- %>
<script id="chat-macros-json" type="application/json">
  <%== chat_macros_json(groups) %>
</script>

<%# -- view -- %>
<%= field_tag("", class: "Chat-macros Field--input Field--select") do %>
  <%=
    select_tag(
      :macro,
      chat_macros_options(groups),
      id: "chat-macro-input",
      include_blank: "Choose a Macro"
    )
  %>
<%- end %>
