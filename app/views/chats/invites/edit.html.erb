<main class="JoinChat Phone">
  <div class="JoinChat-frame Phone-frame">
    <div class="Phone-view">
      <article class="JoinChat-window">
        <header class="JoinChat-header">
          <h1>
            Almost there.
          </h1>
          <h2>
            You should receive a text message with a 4-digit code. Please enter it here to join the chat:
          </h2>
        </header>

        <%= form_for(:invite, url: chat_invites_path, html: { method: :patch, class: "JoinChat-form" }) do |f| %>
          <%= f.field(:code) do %>
            <%= f.text_field(:code, maxlength: 4, placeholder: "1234") %>
          <%- end %>

          <%= f.submit("Join Chat", class: "JoinChat-action Button Button--action") %>
        <%- end %>
      </article>
    </div>
  </div>
</main>
