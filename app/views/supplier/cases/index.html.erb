<main class="Main Main--actions">
  <header class="Main-header">
    <h1 class="Main-title">
      <%= @scope.name %> Cases
    </h1>

    <div class="Main-actions">
      <%= link_to("Add a Case", new_case_path, class: "Button Button--action") %>
    </div>
  </header>

  <ul class="CaseList">
    <% if @cases.blank? %>
      <h2 class="CaseList-fallback">
        No cases added.
      </h2>
    <% else %>
      <%= render(partial: "supplier/cases/cell", collection: @cases) %>
    <% end %>
  </ul>

  <%= pager_for(@page, of: "cases") %>
</main>
