<%= tag.li(case_cell_options(cell, shows_status: false)) do %>
  <div class="CaseCell-title">
    <%=
      link_to(
        cell.recipient_name,
        cell.edit_path,
        class: "CaseCell-name"
      )
    %>

    <% if cell.shows_assign? %>
      <%=
        button_to(
          cell.assign_label,
          cell.assign_path,
          class: "CaseCell-assign ButtonSm Button--secondary"
        )
      %>
    <% else %>
      <p class="CaseCell-assignee">
        <%= cell.assignee_email %>
      </p>
    <% end %>
  </div>

  <div class="CaseCell-details">
    <p class="CaseCell-organizations">
      <%= cell.details_names %>
    </p>
  </div>

  <div class="CaseCell-footer">
    <p class="CaseCell-date">
      <%= cell.updated_label %>
    </p>
  </div>
<%- end %>
