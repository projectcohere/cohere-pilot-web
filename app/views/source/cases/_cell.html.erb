<%= tag.li(case_cell_options(cell)) do %>
  <div class="CaseCell-title">
    <%=
      link_to(
        cell.recipient_name,
        cell.show_path,
        class: "CaseCell-name",
      )
    %>

    <% if not cell.shows_assign? %>
      <p class="CaseCell-assignee">
        <%= cell.assignee_email %>
      </p>
    <% end %>
  </div>

  <div class="CaseCell-details">
    <p class="CaseCell-organizations">
      <%= cell.details_names %>
    </p>
  </div>

  <div class="CaseCell-footer">
    <p class="CaseCell-status">
      <%= cell.status_name %>
    </p>

    <p class="CaseCell-date">
      <%= cell.created_label %>
    </p>
  </div>
<%- end %>
