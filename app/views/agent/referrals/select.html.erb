<main class="PendingCase Page">
  <header class="PageHeader">
    <%= back_link_tag %>

    <h1 class="PageHeader-title">
      <%= t(".title", name: @case.recipient_name) %>
    </h1>
  </header>

  <div class="CaseDetail">
    <div class="CaseDetail-case">
      <%= tag.p(t(".program.title"), class: "PendingCase-title") %>
      <%= tag.p(t(".program.subtitle"), class: "PendingCase-subtitle") %>

      <%= form_tag(@case.start_referral_path, method: :get, class: "PendingCase-field BigField") do %>
        <div class="BigField-input Select">
          <%=
            select_tag(
              :program_id,
              options_for_select(@case.program_options),
              include_blank: t(".program.placeholder")
            )
          %>
        </div>

        <%= submit_tag(t(".actions.submit"), class: "BigField-action") %>
      <%- end %>
    </div>

    <%=
      render(partial: "agent/cases/chat", locals: {
        chat: @case.chat,
        recevier: @case.recipient_first_name
      })
    %>
  </div>
</main>
