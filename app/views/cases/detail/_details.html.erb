<%= section_tag(t(".title"), class: "ShowCase-details") do %>
  <div class="Panel-row">
    <%= field_tag(t(".program"), class: "ShowCase-program") do %>
      <%= view.program_name %>
    <%- end %>

    <% if permit?(:view_details_enroller) %>
      <%= field_tag(t(".enroller"), class: "ShowCase-enroller") do %>
        <%= view.enroller_name %>
      <%- end %>
    <% end %>
  </div>
<%- end %>
