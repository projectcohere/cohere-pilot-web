<%- form = form.details %>
<%= f.fields_for(:details, form) do |f| %>
  <%= f.section("Details", class: "CaseForm-details") do %>
    <%= f.field(:status, background: false, class: "CaseForm-status") do %>
      <%= f.value(view.status) %>
    <%- end %>

    <%= f.field(:program, background: false, class: "CaseForm-program") do %>
      <%= f.value(view.program_name) %>
    <%- end %>

    <%= f.field(:enroller, background: false, class: "CaseForm-enroller") do %>
      <%= f.value(view.enroller_name) %>
    <%- end %>

    <%- disabled = form.contract_variant.present? %>
    <%= f.field(:contract_variant, "Contract", disabled: disabled, background: false, class: "CaseForm-contract") do %>
      <%= f.select(:contract_variant, form.contract_options, include_blank: "None") %>
    <%- end %>
  <% end %>
<% end %>
