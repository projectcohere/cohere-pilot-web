<main class="Main">
  <%- recipient = @case.recipient %></p>
  <h1 class="Main-title">
    <%= recipient.name %>
  </h1>

  <article class="Case Detail">
    <section class="Case-contact Detail-group">
      <h3>Contact</h3>
      <label class="Case-phoneNumber DetailField">
        <span class="DetailField-hint">Phone Number</span>
        <p class="DetailField-text"><%= recipient.phone_number %></p>
      </label>
      <label class="Case-address DetailField">
        <span class="DetailField-hint">Primary Residential Address</span>
        <p class="DetailField-text">
          <% recipient.address.to_lines.each do |line| %>
            <%= line %>
            <br>
          <% end %>
        </p>
      </section>
    </section>

    <section class="Case-utilityAccount Detail-group">
      <%- account = recipient.account %>
      <h3>Utility Account</h3>
      <label class="Case-supplier DetailField">
        <span class="DetailField-hint">Supplier</span>
        <p class="DetailField-text"><%= account.supplier.name %></p>
      </label>
      <label class="Case-accountNumber DetailField">
        <span class="DetailField-hint">Account Number</span>
        <p class="DetailField-text"><%= account.number %></p>
      </label>
      <label class="Case-arrears DetailField">
        <span class="DetailField-hint">Arrears</span>
        <p class="DetailField-text"><%= account.arrears %></p>
      </label>
    </section>

    <section class="Case-dhs Detail-group">
      <h3>MDHHS</h3>
      <label class="Case-dhsNumber DetailField">
        <span class="DetailField-hint">Case Number</span>
        <p class="DetailField-text"><%= recipient.dhs_number %></p>
      </label>
    </section>

    <section class="Case-household Detail-group">
      <%- household = recipient.household %>
      <h3>Household</h3>
      <label class="Case-householdSize DetailField">
        <span class="DetailField-hint">Size</span>
        <p class="DetailField-text"><%= household.size %></p>
      </label>
      <label class="Case-monthlyIncome DetailField">
        <span class="DetailField-hint">Monthly Income</span>
        <p class="DetailField-text"><%= household.income_history[0].amount %></p>
      </label>
    </section>
  </article>
</main>
