<main class="Main">
  <h1 class="Main-title">
    All Cases
  </h1>
  <ul class="CaseList">
    <% if @cases.blank? %>
      <p>No cases left!</p>
    <% else %>
      <% @cases.each do |kase| %>
        <% policy.with_record(kase) do %>
          <li class="CaseCell">
            <div class="CaseCell-row">
              <%= link_to(kase.recipient.name, cases_submitted_path(kase), class: "CaseCell-name") %>
            </div>
            <div class="CaseCell-row">
              <p class="CaseCell-updateTime">
                Updated <%= time_ago_in_words(kase.updated_at) %> ago
              </p>
            </div>
          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</main>
