<main class="Main">
  <%- view = Cases::View.new(@case) %>
  <header class="Main-header">
    <h1 class="Main-title">
      <%= view.recipient_name %>'s case
    </h1>
  </header>

  <div class="EditCase">
    <%= form_for(@form, url: case_referrals_path, html: { class: "CaseForm Form" }) do |f| %>
      <%= f.section("Details", class: "CaseForm-details") do %>
        <%= f.field(:program, background: false, class: "CaseForm-program--referral") do %>
          <%= f.value(@form.program_name) %>
        <% end %>

        <%= f.field(:enroller, background: false, class: "CaseForm-enroller--referral") do %>
          <%= f.value(@form.enroller_name) %>
        <% end %>

        <%= f.field(:contract_variant, "Contract", background: false, class: "CaseForm-contract") do %>
          <%= f.select(:contract_variant, @form.contract_options, include_blank: "None") %>
        <%- end %>
      <%- end %>

      <%= render(partial: "cases/supplier/fields", locals: { f: f, form: @form }) %>
      <%= render(partial: "cases/dhs/fields", locals: { f: f, form: @form }) %>

      <%= f.submit(class: "Form-submit Button--action") %>
    <%- end %>

    <%= render(partial: "cases/documents", locals: { documents: @form.documents }) %>
  <div>
</main>
