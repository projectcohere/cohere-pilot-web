<%- form = form.address %>
<%= f.fields_for(:address, form) do |f| %>
  <%= section_tag("Primary Residential Address", class: "CaseForm-address") do %>
    <%= f.field(:street, class: "CaseForm-street") do %>
      <%= f.text_field(:street) %>
    <%- end %>

    <%= f.field(:street2, "", class: "CaseForm-street2") do %>
      <%= f.text_field(:street2) %>
    <%- end %>

    <% if permit?(:edit_address_geography) %>
      <%= f.field(:geography, "Wayne County?", class: "CaseForm-geography Field--checkbox") do %>
        <%= f.check_box(:geography) %>
      <%- end %>
    <% end %>

    <%= f.field(:city, class: "CaseForm-city") do %>
      <%= f.text_field(:city) %>
    <%- end %>

    <%= field_tag(:state, class: "CaseForm-state Field--fixed") do %>
      MI
    <%- end %>

    <%= f.field(:zip, class: "CaseForm-zip") do %>
      <%= f.text_field(:zip) %>
    <%- end %>
  <% end %>
<% end %>
