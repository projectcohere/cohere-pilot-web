<%- form = form.household %>
<%= f.fields_for(:household, form) do |f| %>
  <%= section_tag(t(".title"), class: "CaseForm-household") do %>
    <% if permit?(:edit_household_size) %>
      <%= f.field(:size, t(".size"), class: "CaseForm-size") do %>
        <%= f.text_field(:size) %>
      <% end %>
    <% end %>

    <% if permit?(:edit_household_ownership) %>
      <%= f.field(:ownership, t(".ownership"), class: "CaseForm-ownership Field--select") do %>
        <%= f.select(:ownership, form.ownership_options) %>
      <%- end %>
    <% end %>

    <% if permit?(:edit_household_primary_residence) %>
      <%= f.field(:primary_residence, t(".primary-residence"), class: "CaseForm-residence Field--checkbox") do %>
        <%= f.check_box(:primary_residence) %>
      <%- end %>
    <% end %>

    <% if permit?(:edit_household_proof_of_income) %>
      <%= f.field(:proof_of_income, t(".proof-of-income"), class: "CaseForm-proofOfIncome Field--select") do %>
        <%= f.select(:proof_of_income, form.proof_of_income_options, include_blank: true) %>
      <%- end %>
    <% end %>

    <% if permit?(:edit_household_dhs_number) %>
      <%= f.field(:dhs_number, t(".dhs-number"), class: "CaseForm-dhsNumber") do %>
        <%= f.text_field(:dhs_number) %>
      <% end %>
    <% end %>

    <% if permit?(:edit_household_income) %>
      <%= f.field(:income, t(".income"), prefix: "$", class: "CaseForm-monthlyIncome") do %>
        <%= f.text_field(:income) %>
      <% end %>
    <% end %>

    <% if permit?(:edit_household_income) %>
      <%= field_tag(:fpl, t(".fpl-percent.label"), class: "CaseForm-fplPercent Field--fixed") do %>
        <%= field_value(view.household_fpl_percent, fallback: t(".fpl-percent.fallback")) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
