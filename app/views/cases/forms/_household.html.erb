<%- form = form.household %>
<%= f.fields_for(:household, form) do |f| %>
  <%= section_tag("MDHHS", class: "CaseForm-dhs") do %>
    <%= f.field(:dhs_number, "Case #", class: "CaseForm-dhsNumber") do %>
      <%= f.text_field(:dhs_number) %>
    <% end %>
  <% end %>

  <%= section_tag("Household", class: "CaseForm-household") do %>
    <%= f.field(:dhs_number, "MDHHS Case #", class: "CaseForm-dhsNumber") do %>
      <%= f.text_field(:dhs_number) %>
    <% end %>

    <%= f.field(:size, "Size", class: "CaseForm-householdSize") do %>
      <%= f.text_field(:size) %>
    <% end %>

    <%= f.field(:income, "Monthly Income", prefix: "$", class: "CaseForm-monthlyIncome") do %>
      <%= f.text_field(:income) %>
    <% end %>

    <% if policy.permit?(:edit_ownership) %>
      <%= f.field(:ownership, "Rent or Own", class: "CaseForm-ownership Field--select") do %>
        <%= f.select(:ownership, form.ownership_options) %>
      <%- end %>
    <% end %>

    <% if policy.permit?(:edit_primary_residence) %>
      <%= f.field(:primary_residence, "&nbsp".html_safe, class: "CaseForm-isPrimaryResidence Field--checkbox") do %>
        <%= f.check_box(:primary_residence) %> Primary Residence?
      <%- end %>
    <% end %>

    <%= field_tag(:fpl, "FPL Percent", class: "CaseForm-fpl Field--fixed") do %>
      <%= field_value(view.fpl_percent, fallback: "Unknown. Please add household info.") %>
    <% end %>
  <% end %>
<% end %>
