<div class="CaseSearch">
  <p class="CaseSearch-title">
    Search for Cases
  </p>

  <%= form_tag(cases_search_path, method: :get, class: "CaseSearch-field BigField") do %>
    <%- params = cases_search_params %>
    <%= text_field_tag(:search, params[:search], class: "BigField-input") %>

    <%- params.without(:search).each do |k, v| %>
      <%= hidden_field_tag(k, v) %>
    <%- end %>

    <%= submit_tag("Find Cases", name: nil, class: "BigField-action") %>
  <%- end %>
</div>
