<main class="Main">
  <h1><%= t(".title") %></h2>
  <%= form_for(:session, url: session_path, html: { class: "SignIn Form" }) do |f| %>
    <h2><%= t(".prompt") %></h2>

    <% if flash.notice.present? %>
      <p class="SignIn-error">
        <%= flash.notice %>
      </p>
    <% end %>

    <%= f.field(:email, t(".email-label")) do %>
      <% f.text_field(:email, type: "email", placeholder: t(".email-placeholder")) %>
    <% end %>

    <%= f.field(:password, t(".password-label")) do %>
      <% f.password_field(:password, placeholder: t(".password-placeholder")) %>
    <% end %>

    <%= f.submit(class: "Button") %>
  <% end %>
</main>
