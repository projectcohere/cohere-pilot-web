<%= tag.li(case_cell_options(cell)) do %>
  <div class="CaseCell-header">
    <%= link_to(cell.recipient_name, cell.edit_path, action: :edit, class: "CaseCell-name") %>

    <% if cell.shows_assign? %>
      <%=
        button_to("Assign to Me",
          cell.assign_path,
          class: "CaseCell-assign ButtonSm Button--secondary"
        )
      %>
    <% else %>
      <p class="CaseCell-assignee">
        <%= cell.assignee %>
      </p>
    <% end %>
  </div>

  <div class="CaseCell-footer">
    <p class="CaseCell-date">
      Updated <%= time_ago_in_words(cell.updated_at) %> ago
    </p>
  </div>
<%- end %>
